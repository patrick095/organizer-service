{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": ["ES5"],
        "allowJs": true,
        "outDir": "./dist/",
        "rootDir": "./src",
        "removeComments": true,
        "strict": false,
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@entity/*": ["entity/*"],
            "@configs/*": ["configs/*"],
            "@middlewares/*": ["middlewares/*"],
            "@repository/*": ["repository/*"],
            "@interfaces/*": ["interfaces/*"],
            "@routers/*": ["routers/*"]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["__tests__/**/*", "coverage/**/*", "node_modules/**/*", "dist/**/*", "jest.config.js"]
}
