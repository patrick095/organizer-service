{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": ["ES5"],
        "allowJs": true,
        "outDir": "./dist/",
        "rootDir": "./src",
        "removeComments": true,
        "strict": false,
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@models/*": ["models/*"],
            "@configs/*": ["configs/*"],
            "@middlewares/*": ["middlewares/*"],
            "@database/*": ["database/*"],
            "@interfaces/*": ["interfaces/*"],
            "@routes/*": ["routes/*"]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
